<p id="notice"><%= notice %></p>

<h1>Frights</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @frights.each do |fright| %>
      <tr>
        <td><%= fright.name %></td>
        <td><%= link_to 'Show', fright %></td>
        <td><%= link_to 'Edit', edit_fright_path(fright) %></td>
        <td><%= link_to 'Destroy', fright, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fright', new_fright_path %>
